pipeline {
    agent any

    stages {
        // Этап клонирования репозитория
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Этап сборки проекта
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh './build.sh'  // или полный путь, если нужно: './scripts/build.sh'
            }
        }

        // Этап тестирования проекта
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh './run_tests.sh'
            }
        }

        // Этап деплоя на staging
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging server...'
                sh './deploy.sh staging'  // предполагаем, что скрипт деплоя обрабатывает переменную 'staging'
            }
        }

        // Этап деплоя на production (будет выполняться только после успешного деплоя на staging)
        stage('Deploy to Production') {
            when {
                branch 'main'  // Убедимся, что деплой на production выполняется только с главной ветки
                beforeAgent true
            }
            steps {
                echo 'Deploying to production server...'
                sh './deploy.sh production'  // предполагаем, что скрипт деплоя обрабатывает переменную 'production'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
